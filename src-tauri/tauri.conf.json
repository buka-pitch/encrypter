{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "File Encryptor",
  "version": "0.1.0",
  "identifier": "com.fileencryptor.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "File Encryptor",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null
    }
  }
}
